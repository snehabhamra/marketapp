<section class="form-auth text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    # <img class="mb-4" src="" alt="" width="72" height="57">

    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "floatingInput", placeholder: "Email address" %>


    <div class="form-floating">
      <input type="password", class="form-control", id: "floatingPassword", placeholder="Password", required="" >
      <label for="floatingPassword">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", id: "floatingPassword" %>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
<% end %>
</section>



